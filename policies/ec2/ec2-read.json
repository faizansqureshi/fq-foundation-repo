{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Action": [
        "ec2:Describe*"
      ],
      "Effect": "Allow",
      "Resource": "*"
    },
    {
      "Action": [
        "iam:GetInstanceProfile"
      ],
      "Effect": "Allow",
      "Resource": "*",
      "Condition": {
        "ArnLike": {
          "aws:PrincipalArn": "arn:aws:iam::*:role/pty-${aws:ResourceTag/Environment}-${aws:ResourceTag/Workload}-*"
        }
      }
    }
  ]
}