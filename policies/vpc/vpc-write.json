{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "AllowElasticIPOperationsForNatGateway",
      "Effect": "Allow",
      "Action": [
        "ec2:CreateNatGateway",
        "ec2:DescribeAddresses",
        "ec2:DeleteNatGateway"
      ],
      "Resource": [
        "*"
      ]
    },
    {
      "Sid": "AllowVPCCreateWithWriteRequestTags",
      "Effect": "Allow",
      "Action": [
        "ec2:CreateVpc",
        "ec2:CreateSubnet",
        "ec2:CreateRouteTable",
        "ec2:CreateSecurityGroup",
        "ec2:CreateInternetGateway",
        "ec2:CreateNatGateway",
        "ec2:CreateVpcPeeringConnection",
        "ec2:CreateTags",
        "ec2:CreateVolume",
        "ec2:AllocateAddress",
        "ec2:ImportKeyPair",
        "ec2:RunInstances",
        "ec2:CreateFlowLogs",
        "ec2:CreateNetworkInterface"
      ],
      "Resource": "*"
      
    },
    {
      "Sid": "AllowVPCModifyWithResourceTags",
      "Effect": "Allow",
      "Action": [
        "ec2:DeleteVpc",
        "ec2:DeleteSubnet",
        "ec2:DeleteRouteTable",
        "ec2:DeleteSecurityGroup",
        "ec2:DeleteInternetGateway",
        "ec2:DeleteNatGateway",
        "ec2:DeleteVpcPeeringConnection",
        "ec2:DeleteTags",
        "ec2:DeleteVolume",
        "ec2:AttachInternetGateway",
        "ec2:AssociateRouteTable",
        "ec2:DisassociateRouteTable",
        "ec2:DeleteRoute",
        "ec2:ModifySubnetAttribute",
        "ec2:ModifyVpcAttribute",
        "ec2:AuthorizeSecurityGroupIngress",
        "ec2:RevokeSecurityGroupIngress",
        "ec2:AuthorizeSecurityGroupEgress",
        "ec2:RevokeSecurityGroupEgress",
        "ec2:UpdateSecurityGroupRuleDescriptionsIngress",
        "ec2:UpdateSecurityGroupRuleDescriptionsEgress",
        "ec2:DetachInternetGateway",
        "ec2:TerminateInstances",
        "ec2:ModifyInstanceAttribute",
        "ec2:DeleteKeyPair",
        "ec2:ReleaseAddress",
        "ec2:DisassociateAddress",
        "ec2:AttachVolume",
        "ec2:DetachVolume",
        "ec2:DeleteFlowLogs",
        "ec2:ModifyNetworkInterfaceAttribute",
        "ec2:AttachNetworkInterface",
        "ec2:AssociateAddress",
        "ec2:DetachNetworkInterface",
        "ec2:MonitorInstances",
        "ec2:ReplaceNetworkAclAssociation",
        "ec2:CreateNetworkInterface",
        "ec2:CreateNetworkInterfacePermission",
        "ec2:DeleteNetworkInterfacePermission",
        "ec2:CreateSubnet",
        "ec2:CreateRouteTable",
        "ec2:CreateFlowLogs",
        "ec2:AssociateVpcCidrBlock"
      ],
      "Resource": "*"
      
    },
    {
      "Sid": "AllowIAMPassRoleForVPC",
      "Action": [
        "iam:PassRole"
      ],
      "Effect": "Allow",
      "Resource": "*",
      "Condition": {
        "StringLike": {
          "iam:PassedToService": "vpc-flow-logs.amazonaws.com"
        }
      }
    },
    {
      "Sid": "AdditionalVPCPermissions",
      "Effect": "Allow",
      "Action": [
        "ec2:ReplaceNetworkAclAssociation",
        "ec2:CreateTags"
      ],
      "Resource": [
        "*"
      ]
      
    },
    {
      "Sid": "AllowVPCWithoutCondition",
      "Effect": "Allow",
      "Action": [
        "ec2:RunInstances",
        "ec2:DisassociateAddress",
        "ec2:CreateRoute",
        "ec2:ReplaceRoute",
        "ec2:AuthorizeSecurityGroupEgress",
        "ec2:RevokeSecurityGroupEgress",
        "ec2:AuthorizeSecurityGroupIngress",
        "ec2:DeleteNetworkInterface",
        "ec2:RevokeSecurityGroupIngress"
      ],
      "Resource": "*"
    },
    {
      "Sid": "AllowCrossAccountTagging",
      "Effect": "Allow",
      "Action": [
        "ec2:CreateTags",
        "ec2:DeleteTags"
      ],
      "Resource": [
        "*"
        
      ]
    }
  ]
}